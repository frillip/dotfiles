# LAZY CHDIR
alias ..='cd ..'
alias ...='cd ../..'

# DEFAULT ARGS
alias tree="tree -CA"
alias ip="ip -c"
# Open specified files in tabs by default. -O and -o will override.
alias vim='vim -p'
# human readable timestamps
alias dmesg='dmesg -T'
# Moar ANSI colours, raw mode
alias less='less -R'
# list by creation date (I think)
alias lr='ls -latr'
# list all
alias la='ls -al'
# note this does not work on mac os x, has to be patched in bash or fish rc
alias ls='ls --color=auto'
# don't use URL to create filename (do I really want a file called
# unetbootin-source-494.tar.gz?r=http%3A%2F%2Fsourceforge.net%2Fprojects%2Funetbootin%2Ffiles%2FUNetbootin%2F494%2F&ts=1391695063&use_mirror=heanet?)
alias wget='wget --content-disposition'

# COMMON SHORTCUTS
alias sagi='sudo apt-get install'
alias bi='brew install'
alias bci='brew cask install'
alias b='git branch -a'
alias l=ls
alias o='git log'
alias g=git
alias s='git status'
alias d='git diff'
alias dt='git difftool -y'
# task default command is "next", hence "n"
alias n='task'
alias in='task add +in'
alias week='task end.after:today-1wk completed'
alias day='task end.after:today completed'
alias t="tail -n100 -f"
alias TODO='rg TODO'
# replace a symlink with the file it points to
alias rewrite="sed -i ''"
alias webserver='python -m SimpleHTTPServer'
alias grep='grep --color=auto'
alias openssl-get-expiry='openssl x509 -enddate -noout -in'
alias sed-recursive="rg --files --hidden --ignore-file=~/.rgignore | xargs sed -i '' -E -e"
alias r="rgfzf"

# MISC FIXES
# make bash/zsh (but not fish yet, TODO) aliases work with sudo
# http://superuser.com/questions/441556/bash-alias-doesnt-carry-over-with-sudo
alias sudo="sudo "

# ~/.gnupg config directories are incompatible (so why do they share the same
# namespace???) so force-choose gpg2, which is faster due to AVX etc.
alias gpg=gpg2

# TYPO FIXES
alias sl=ls
alias c=cd
alias xs=cd
alias cim=vim
alias bim=vim
alias nom=npm
alias gi=git
alias cd..='cd ..'
alias lsd=ls
alias grepo=grep
alias rfind=find
alias car=cat

# DEPRECATIONS
alias findack='echo use f which is an alias for fzf, or ctrl-p which opens in fzf in vim' # deprecated!
alias ack='echo use ripgrep \(rg\)' # deprecated!
